@Library('my-shared-lib') _


pipeline{
    agent any 

    parameters{

        choice(name :'action', choices: 'create\ndelete', 'Choose Create or Delete')
    }

    stages{

            when { expression { param.action == 'Create'}}
            stage("Git Checkout"){
            
            steps{
                gitCheckout(
                    branch: "main",
                    url: "https://github.com/chanakyaboyini/DevOps_Jenkins.git"
            )
   
        }
        }
        stage("Unit testing Maven"){
        when { expression { param.action == 'Create'}}
        
        steps{
             script{
                mvnTest()
             }
        }
}
        stage("maven Integration Test"){
        when { expression { param.action == 'Create'}}
        
        steps{
             script{
                MVNintegrationtest()
             }
    }
}
    }

    stage("Static Code Analysis : Sonarqube"){
        when { expression { param.action == 'Create'}}
        
        steps{
             script{
                StaticCodeAnalysis()
             }
}




